@model Healty.Core.ViewModels.TodoVM

@{
    var actionName = @Model.Id > 0 ? "Edit" : "Add New";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var title = ViewData["Title"] = actionName + " Task";
}

<div class="modal-content">
    <div class="modal-body">

        <div class="card m-auto border">

            <div class="card-header">
                <i class="fas fa-edit "></i> <span>@title </span>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-8 ">
                       
                        <p class="alert alert-info">All fields are <strong>required</strong>.</p>
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(m => m.Id)

                        <div class="form-group">
                            @Html.LabelFor(m => m.Title, new { @class = "text-muted" })
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", autofocus = "autofocus", maxlength = "250" })
                            @Html.ValidationMessageFor(m => m.Title)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.DueDate, new { @class = "text-muted" })

                            @Html.ValidationMessageFor(m => m.DueDate)
                        </div>

                        <div class="form-group ">
                            <div class="input-group date">
                                <input type="text" id="DueDate" class="form-control datepicker" />
                                @*@Html.TextBoxFor(m => m.DueDate, new {@class = "form-control datepicker" })*@
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted py-2">
               
                <div class="   d-flex justify-content-between ">

                    <button type="button" class="btn btn-info w-25 text-white " onclick=" submitTodo()">
                        <i class="fas fa-save"></i> Save
                    </button>

                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-25"><i class="fas fa-sign-out-alt"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section  Scripts{
    @{
        @Html.Partial("_ValidationScriptsPartial")
    }

    <script>
        $(document).ready(function () {
          
        });
    </script>
}
